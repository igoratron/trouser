<div class="max-w-4xl mx-auto">
  <div class="mb-6">
    <%= link_to '← Back to Bookmarks', bookmarks_path, 
        class: 'inline-flex items-center px-4 py-2 bg-gray-600 text-white font-medium rounded-lg hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 transition-colors' %>
  </div>

  <!-- Extracted Content Section -->
  <div class="bg-white shadow-sm rounded-lg border border-gray-200 p-6 mt-6">
    <h2 class="text-2xl font-bold text-gray-900 mb-6">Extracted Content</h2>
    
    <% if @extraction_error %>
      <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-red-800">Content Extraction Failed</h3>
            <p class="text-sm text-red-700 mt-1"><%= @extraction_error %></p>
          </div>
        </div>
      </div>
    <% elsif @extracted_content %>
      <div class="space-y-6">
        <!-- Title -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Title</label>
          <div class="p-3 bg-gray-50 rounded-lg">
            <h3 class="text-lg font-semibold text-gray-900"><%= @extracted_content[:title] %></h3>
          </div>
        </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">URL</label>
            <div class="p-3 bg-gray-50 rounded-lg">
              <a target="_blank" href="<%= @bookmark.url %>"><%= @bookmark.url %></a>
            </div>
          </div>

        <!-- Summary -->
        <% if @extracted_content[:summary].present? %>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Summary</label>
            <div class="p-3 bg-blue-50 rounded-lg">
              <p class="text-gray-800"><%= @extracted_content[:summary] %></p>
            </div>
          </div>
        <% end %>

        <!-- Content Stats -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div class="p-3 bg-gray-50 rounded-lg">
            <div class="text-sm font-medium text-gray-700">Word Count</div>
            <div class="text-lg font-semibold text-gray-900"><%= @extracted_content[:word_count] %></div>
          </div>
          <div class="p-3 bg-gray-50 rounded-lg">
            <div class="text-sm font-medium text-gray-700">Images Found</div>
            <div class="text-lg font-semibold text-gray-900"><%= @extracted_content[:images]&.size || 0 %></div>
          </div>
          <div class="p-3 bg-gray-50 rounded-lg">
            <div class="text-sm font-medium text-gray-700">Extracted At</div>
            <div class="text-sm text-gray-900"><%= @extracted_content[:extracted_at].strftime("%H:%M") %></div>
          </div>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Content</label>
          <div class="prose prose-base">
            <%= raw @extracted_content[:content] %>
          </div>
        </div>
      </div>
    <% else %>
      <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-yellow-800">Content Not Extracted</h3>
            <p class="text-sm text-yellow-700 mt-1">Content extraction is in progress or was not attempted.</p>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="mt-8 flex items-center justify-between">
    <div class="text-sm text-gray-500">
      Bookmark ID: <%= @bookmark.url_id %>
    </div>
  </div>
</div> 