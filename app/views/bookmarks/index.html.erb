<%= turbo_stream_from "bookmarks" %>

<div class="w-full">
  <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-100 mb-6">Bookmarks</h1>
  
  <%= link_to 'Add New Bookmark', new_bookmark_path, 
      class: 'inline-flex items-center px-4 py-2 bg-blue-600 dark:bg-blue-700 text-white font-medium rounded-lg hover:bg-blue-700 dark:hover:bg-blue-800 focus:outline-none focus:ring-2 focus:ring-blue-500 dark:focus:ring-blue-400 focus:ring-offset-2 dark:focus:ring-offset-gray-900 transition-colors mb-8' %>

  <% if @bookmarks.any? %>
    <div id="bookmarks-grid" class="grid gap-4 md:grid-cols-2 lg:grid-cols-3">
      <% @bookmarks.each do |bookmark_presenter| %>
        <%= render 'bookmark', bookmark_presenter: bookmark_presenter %>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12">
      <p class="text-gray-500 dark:text-gray-400 text-lg">No bookmarks found.</p>
    </div>
  <% end %>
</div> 