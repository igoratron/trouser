<div class="w-full">
  <h1 class="text-3xl font-bold text-gray-900 mb-6">Bookmarks</h1>
  
  <%= link_to 'Add New Bookmark', new_bookmark_path, 
      class: 'inline-flex items-center px-4 py-2 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors mb-8' %>

  <% if @bookmarks.any? %>
    <div class="grid gap-4 md:grid-cols-2 lg:grid-cols-3">
      <% @bookmarks.each do |bookmark_presenter| %>
        <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200 hover:shadow-md transition-shadow">
          <div class="flex flex-col space-y-4 h-full">
            <!-- URL Section -->
            <div class="flex-1">
              <% if bookmark_presenter.has_images? %>
                <% first_image = bookmark_presenter.first_image %>
                <img src="<%= first_image['src'] %>" 
                      alt="<%= first_image['alt'] %>" 
                      class="w-full h-32 object-cover rounded-lg border border-gray-200"
                      loading="lazy">
              <% end %>

              <div class="mt-3">
                <% if bookmark_presenter.display_url_with_title? %>
                  <%= link_to bookmark_presenter.display_title, bookmark_presenter.url, target: "_blank", 
                      class: 'text-blue-600 hover:text-blue-800 hover:underline block' %>
                  <p class="text-xs text-gray-400 mt-1 break-all"><%= bookmark_presenter.url %></p>
                <% else %>
                  <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wider mb-2">URL</h3>
                  <%= link_to bookmark_presenter.url, bookmark_presenter.url, target: "_blank", 
                      class: 'text-blue-600 hover:text-blue-800 hover:underline break-all' %>
                <% end %>
                
                <!-- Word count -->
                <% if bookmark_presenter.has_word_count? %>
                  <p class="text-xs text-gray-500 mt-2 flex items-center">
                    <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                    </svg>
                    <%= bookmark_presenter.display_word_count %>
                  </p>
                <% end %>
              </div>
            </div>
            
            <!-- Actions Section -->
            <div class="pt-4 border-t border-gray-100">
              <div class="flex justify-between">
                <%= button_to 'Delete', bookmark_destroy_path(bookmark_presenter.url_id), 
                    method: :delete,
                    form: { data: { turbo_confirm: 'Are you sure you want to delete this bookmark?' } },
                    class: 'inline-flex items-center px-3 py-1 bg-red-100 text-red-700 font-medium rounded-md hover:bg-red-200 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 transition-colors border-0' %>
                <%= link_to 'View', bookmark_show_path(bookmark_presenter.url_id), 
                    class: 'inline-flex items-center px-3 py-1 bg-gray-100 text-gray-700 font-medium rounded-md hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 transition-colors' %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12">
      <p class="text-gray-500 text-lg">No bookmarks found.</p>
    </div>
  <% end %>
</div> 